#!/bin/sh
#
# nfs        Skip NFS startup
#

umask 077

start() {
	mkdir /root/sd
	mount /dev/mmcblk0p2 /root/sd
}

stop() {
	echo "OK"
}

restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?
